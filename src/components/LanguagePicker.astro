---
import { ui, defaultLang } from '../i18n/ui';

const locale = Astro.currentLocale;
---

<div class="language-picker">
  {
    Object.keys(ui).map(
      (lang) =>
        lang !== locale && (
          <a href={lang === defaultLang ? '/' : `/${lang}`}>
            {lang.toLocaleUpperCase()}
          </a>
        ),
    )
  }
</div>

<style lang="scss">
  a {
    font-size: clamp-fluid(18, 20);
  }
</style>
