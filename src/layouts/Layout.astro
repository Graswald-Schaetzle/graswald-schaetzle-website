---
import '../styles/index.scss';

import { general } from '@content/globals';

import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
// import Splash from '@components/Splash.astro';

const { pageTitle } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const title = `${pageTitle ? pageTitle + ' | ' : ''}${general.siteTitle}`;
const description = general.siteDescription;
const shareImage = new URL(general.siteImage.src, Astro.url);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#EAE2DA" />
    <title>{title}</title>
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="canonical" href={canonicalURL} />
    <!-- TODO: remove when going live -->
    <meta name="robots" content="noindex, nofollow" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={shareImage} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en" />
    <meta property="og:url" content={canonicalURL} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={shareImage} />
    <!-- TODO: preload font -->
    <!-- <script
      is:inline
      defer
      src="https://tracking.jnkl.dev/script.js"
      data-website-id=""
      data-domains="gsw-website.vercel.app"
      data-do-not-track="true"></script> -->
  </head>
  <body>
    <Header />

    <slot />

    <Footer />

    <!-- <Splash text="splish splash" /> -->

    <script>
      import '../scripts/console.ts';
      // import '../scripts/scroll.ts';
      import '../scripts/inview.ts';
    </script>
  </body>
</html>
