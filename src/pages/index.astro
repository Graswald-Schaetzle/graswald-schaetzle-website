---
import { getCollection } from 'astro:content';

import Layout from '@layouts/Layout.astro';
import StickyContent from '@components/StickyContent.astro';

const [page] = await getCollection('pageHome');
---

<Layout>
  <main>
    <section class="visually-hidden">
      <h1>{page.data.h1}</h1>
    </section>
    <section>
      <StickyContent fields={page.data.moduleStickyContent} />
    </section>
  </main>
</Layout>
